{
	"name": "sequeljs",
	"version": "0.1.1",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev:start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
		"prod:start": "tsc && node dist/index.js",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix"
	},
	"keywords": [
		"nodejs",
		"restful",
		"api",
		"graphql"
	],
	"devDependencies": {
		"@types/express": "^4.17.7",
		"@types/graphql": "^14.5.0",
		"@types/node": "^14.0.27",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"@typescript-eslint/parser": "^3.9.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.7.0",
		"eslint-plugin-no-loops": "^0.3.0",
		"graphql-tag": "^2.11.0",
		"husky": "^4.2.5",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"express": "^4.17.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	}
}
